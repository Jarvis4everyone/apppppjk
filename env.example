# ============================================
# AXZORA CHAT BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your credentials
# DO NOT commit .env to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# POSTGRESQL DATABASE
# ============================================
# Used for: Users, Authentication, Contact Lists, User Metadata
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=axzora_chat
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_SSL=false

# Alternative: Use connection string instead of individual variables
# POSTGRES_URL=postgresql://username:password@host:port/database

# ============================================
# MONGODB DATABASE
# ============================================
# Used for: Chat Messages, Attachments, Chat Threads

# Option 1: Individual connection parameters
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=axzora_chat
MONGO_USER=your_mongo_username
MONGO_PASSWORD=your_mongo_password

# Option 2: Full connection URI (recommended for production)
# For local MongoDB: mongodb://localhost:27017/axzora_chat
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/axzora_chat?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/axzora_chat

# ============================================
# REDIS CACHE
# ============================================
# Used for: Online/Offline Presence, Caching, Unread Counts, Temporary Session Data

# Option 1: Individual connection parameters
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Option 2: Full connection URL (recommended for production)
# For local Redis: redis://localhost:6379
# For Redis Cloud: redis://:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ============================================
# AGORA VIDEO/VOICE CALL CONFIGURATION
# ============================================
# Get your credentials from: https://console.agora.io/
# 1. Sign up for a free account at https://www.agora.io/
# 2. Create a new project in the Agora Console
# 3. Copy your App ID and App Certificate
# 4. Paste them below

# Your Agora App ID (required)
AGORA_APP_ID=your_agora_app_id_here

# Your Agora App Certificate (required for token generation)
# Keep this secret! Never commit it to version control.
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,mp4,mp3

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Set these for production deployment
# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn-if-using-error-tracking

